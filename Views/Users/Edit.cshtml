@model User

@using (Html.BeginForm("Edit", "Users", FormMethod.Post))
{
    
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { })
        @Html.EditorFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { })
        @Html.EditorFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { })
        @Html.EditorFor(m => m.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { })
        @Html.EditorFor(m => m.Password, new { @class = "form-control" })
    </div>
    <input type="submit" value="Submit" class="btn btn-default" />
}